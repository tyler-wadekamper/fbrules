<%= render layout: 'devise/shared/center_layout' do %>
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "form-label mb-0" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
    </div>

    <div class="actions">
      <%= f.submit "Send password reset email", class: "btn btn-outline-primary my-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>