<%= render layout: 'devise/shared/center_layout' do %>
  <h2>Log in</h2>
  <div>   
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "form-label mb-0" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
      </div>
    
      <div class="field">
        <%= f.label :password, class: "form-label mb-0" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-2" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-outline-primary my-2" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
<% end %>