<div data-controller="visibility">
  <button data-action="visibility#toggleVisibility visibility#toggleAnswerButton" data-visibility-target="button" data-bs-toggle="button" class="btn btn-outline-primary shadow-none answer-button">Show Answer</button>
  <div class="card-text my-2">
    <span data-visibility-target="hideable" hidden>
      <div class="fw-bold answer">
        <%= answer.text %>
      </div>
      <div class="explanation">
        <%= answer.explanation %>
      </div>
    </span>
  </div>
</div>