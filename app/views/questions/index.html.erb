
<div class="container-fluid">
  <% if user_signed_in? %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <%= button_to 'New question', new_question_path, data: { turbo_frame: "new_question" }, method: :get, class: 'btn btn-outline-primary' %>
      </div>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <%= turbo_frame_tag "new_question", target: "_top"%>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <%= render @questions %>
      <% unless @pagy.next.nil? %>
        <%= render "next_page" %>
      <% end %>
    </div>
  </div>
</div>