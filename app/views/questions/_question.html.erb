  <div class="card my-4 text-dark bg-light shadow-sm">
    <div class="card-body">
      <turbo-frame id="<%= dom_id question %>" class="question">
        <div class="container-fluid p-0">
          <div class="row">
            <div class="col-6">
              <div class='card-title mb-0 h5 author-name'>
                <%= question.author.first_name %> <%= question.author.last_name %>
              </div>
              <div class='card-subtitle text-muted time-elapsed'>
                <% if question.created_at == question.updated_at %>
                  Posted <%= time_ago_in_words(question.created_at) %> ago
                <% else %>
                  Edited <%= time_ago_in_words(question.updated_at) %> ago
                <% end %>
              </div>
            </div>

            <div class="col-6 d-flex justify-content-end">
              <% if question.author == current_user %>
                <%= link_to 'Edit', edit_question_path(question.id), class: "card-link text-decoration-none align-self-center" %>
              <% end %>
            </div>

          </div>
        </div>

        <div class="card-text my-2">
            <%= question.body %>
        </div>

        <%= render 'answers/answer', answer: question.answer %>
      </turbo-frame>
    </div>
  </div>

